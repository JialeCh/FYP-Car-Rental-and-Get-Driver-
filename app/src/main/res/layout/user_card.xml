<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="360dp"
        android:layout_height="240dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/round_card"
        app:cardBackgroundColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circular_grey_bordersolid"
            android:backgroundTint="@android:color/white">

            <TextView
                android:id="@+id/user_Id2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/nunito_black"
                android:text="Address:"
                android:textColor="@color/lightblack"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/user_Id4"
                app:layout_constraintTop_toBottomOf="@+id/user_Id4" />

            <TextView
                android:id="@+id/user_Id5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/nunito_black"
                android:text="Address:"
                android:textColor="@color/lightblack"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/user_Id2"
                app:layout_constraintTop_toBottomOf="@+id/user_Id2" />

            <TextView
                android:id="@+id/User_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/nunito_black"
                android:text="User ID:"
                android:textColor="@color/lightblack"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/user_Id3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/nunito_black"
                android:text="Email"
                android:textColor="@color/lightblack"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/User_Id"
                app:layout_constraintTop_toBottomOf="@+id/User_Id" />

            <TextView
                android:id="@+id/user_Id4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/nunito_black"
                android:text="Phone"
                android:textColor="@color/lightblack"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/user_Id3"
                app:layout_constraintTop_toBottomOf="@+id/user_Id3" />

            <Button
                android:id="@+id/book"
                android:layout_width="152dp"
                android:layout_height="35dp"
                android:background="@drawable/select_button"
                android:backgroundTint="@color/colorSecondary"
                android:fontFamily="@font/roboto_bold"
                android:text="Status"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="User Details"
                android:textColor="@color/lightblack"
                android:textSize="14sp"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="@+id/book"
                app:layout_constraintStart_toStartOf="@+id/User_Id"
                app:layout_constraintTop_toTopOf="@+id/book" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>